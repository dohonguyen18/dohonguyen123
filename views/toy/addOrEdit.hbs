<h3>{{viewTitle}}</h3>

    <form action="/toy" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{toy._id}}">
        <div class="form-group">
            <label> Name Product</label>
            <input type="text" class="form-control" name="name" value="{{toy.name}}" placeholder=" Name Product">
                        
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="text" class="form-control" name="price" value="{{toy.price}}" placeholder="Price">
            
        </div>
        <div class="form-row">
            <div class="form-group md-6">
                <label>Amount</label>
                <input type="text" name="amount" placeholder="Amount" value="{{toy.amount}}" class="form-control">
                
             </div>
            <div class="form-group md-6">
                <label>Description</label>
                <input type="text" name="description" placeholder="Description" value="{{toy.description}}" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
            <a href="/toy/list" class="btn btn-danger">
                <i class="fa fa-list-alt"></i>View All
            </a>
        </div>


    </form>
